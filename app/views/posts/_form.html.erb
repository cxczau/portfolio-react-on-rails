<%= simple_form_for(@post, remote: true) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
  </div>

  <div class="form-inputs">
    <%= f.input :body %>
  </div>

  <div class="form-actions mt-3">
    <%= f.button :submit %>
  </div>
<% end %>
